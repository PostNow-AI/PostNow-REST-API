#!/bin/bash
# Git commit-msg hook
# Validates Conventional Commits format
# Install: cp scripts/commit-msg .git/hooks/commit-msg && chmod +x .git/hooks/commit-msg

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

COMMIT_MSG_FILE=$1
COMMIT_MSG=$(cat "$COMMIT_MSG_FILE")

# Conventional Commits pattern (with optional Gitmoji)
# Examples:
#   feat(scope): description
#   fix: description
#   feat(scope): :sparkles: description
#   fix: :bug: description
PATTERN="^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)(\([a-zA-Z0-9_-]+\))?: (:[\w_+-]+: )?[a-zA-Z0-9].*$"

# Allow merge commits
if [[ "$COMMIT_MSG" =~ ^Merge ]]; then
    exit 0
fi

# Allow revert commits
if [[ "$COMMIT_MSG" =~ ^Revert ]]; then
    exit 0
fi

# Validate the commit message
if ! echo "$COMMIT_MSG" | head -1 | grep -qE "$PATTERN"; then
    echo -e "${RED}ERROR: Invalid commit message format!${NC}"
    echo ""
    echo -e "${YELLOW}Your commit message:${NC}"
    echo "  $COMMIT_MSG"
    echo ""
    echo -e "${YELLOW}Expected format:${NC}"
    echo "  type(scope): description"
    echo "  type(scope): :emoji: description"
    echo "  type: description"
    echo ""
    echo -e "${YELLOW}Valid types:${NC}"
    echo "  feat     - New feature"
    echo "  fix      - Bug fix"
    echo "  docs     - Documentation only"
    echo "  style    - Code style (formatting)"
    echo "  refactor - Code refactoring"
    echo "  perf     - Performance improvement"
    echo "  test     - Tests"
    echo "  build    - Build system"
    echo "  ci       - CI configuration"
    echo "  chore    - Maintenance tasks"
    echo "  revert   - Revert previous commit"
    echo ""
    echo -e "${YELLOW}Examples:${NC}"
    echo "  feat(auth): add OAuth2 login"
    echo "  fix(onboarding): :bug: correct step tracking"
    echo "  docs: update README"
    echo ""
    exit 1
fi

# Check message length (max 72 chars for first line)
FIRST_LINE=$(echo "$COMMIT_MSG" | head -1)
if [ ${#FIRST_LINE} -gt 72 ]; then
    echo -e "${YELLOW}WARNING: First line is ${#FIRST_LINE} characters (recommended max: 72)${NC}"
fi

echo -e "${GREEN}Commit message validated successfully!${NC}"
exit 0
